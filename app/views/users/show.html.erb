<div style="max-width: 900px; margin: 0 auto;">
  <!-- Banner -->
  <div style="height: 200px; background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); border-radius: 8px; margin-bottom: -60px; position: relative;">
    <% if @user.banner_url.present? %>
      <img src="<%= @user.banner_url %>" style="width: 100%; height: 100%; object-fit: cover; border-radius: 8px;" alt="Banner">
    <% end %>
  </div>

  <!-- Informaci√≥ del perfil -->
  <div style="background: white; border: 1px solid #ddd; border-radius: 8px; padding: 20px; margin-bottom: 20px;">
    <div style="display: flex; align-items: flex-start; gap: 20px;">
      <!-- Avatar -->
      <div style="position: relative; top: -40px;">
        <% if @user.avatar_url.present? %>
          <img src="<%= @user.avatar_url %>"
               style="width: 120px; height: 120px; border-radius: 50%; border: 5px solid white; box-shadow: 0 2px 8px rgba(0,0,0,0.1);"
               alt="<%= @user.username %>">
        <% else %>
          <div style="width: 120px; height: 120px; border-radius: 50%; background: #667eea; border: 5px solid white; display: flex; align-items: center; justify-content: center; color: white; font-size: 48px; font-weight: bold;">
            <%= @user.username[0].upcase %>
          </div>
        <% end %>
      </div>

      <!-- Info principal -->
      <div style="flex: 1; padding-top: 10px;">
        <div style="display: flex; justify-content: space-between; align-items: start;">
          <div>
            <h1 style="margin: 0 0 5px 0; font-size: 24px;"><%= @user.name %></h1>
            <p style="margin: 0; color: #666;">u/<%= @user.username %></p>
          </div>

          <% if user_signed_in? && current_user == @user %>
            <%= link_to "Editar perfil", edit_user_path(@user),
                style: "padding: 8px 16px; background: #0079d3; color: white; text-decoration: none; border-radius: 20px; font-weight: bold;" %>
          <% end %>
        </div>

        <% if @user.bio.present? %>
          <p style="margin-top: 15px; color: #1c1c1c;"><%= @user.bio %></p>
        <% end %>

        <!-- Estad√≠stiques -->
        <div style="display: flex; gap: 20px; margin-top: 15px; padding-top: 15px; border-top: 1px solid #eee;">
          <div>
            <strong><%= @user.posts_count %></strong>
            <span style="color: #666;">publicacions</span>
          </div>
          <div>
            <strong><%= @user.comments_count %></strong>
            <span style="color: #666;">comentaris</span>
          </div>
          <div>
            <span style="color: #666;">Membre des de <%= @user.created_at.strftime("%B %Y") %></span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- API KEY -->
  <% if user_signed_in? && current_user == @user %>
  <div style="margin-top: 20px; padding: 15px; background: #fff3cd; border: 1px solid #ffc107; border-radius: 4px;">
    <strong>üîë API Key (privada):</strong>
    <div style="display: flex; gap: 10px; align-items: center; margin-top: 10px;">
      <code style="flex: 1; padding: 10px; background: white; border: 1px solid #ddd; border-radius: 4px; font-family: monospace; word-break: break-all;">
        <%= @user.api_key %>
      </code>
      <%= button_to "Regenerar", regenerate_api_key_user_path(@user),
          method: :post,
          data: { confirm: "Est√†s segur? L'API key antiga deixar√† de funcionar." },
          style: "padding: 8px 16px; background: #dc3545; color: white; border: none; border-radius: 4px; cursor: pointer;" %>
    </div>
    <small style="color: #856404; display: block; margin-top: 10px;">
      ‚ö†Ô∏è No comparteixis aquesta clau amb ning√∫. √ösala per accedir a l'API.
    </small>
  </div>
<% end %>

  <!-- Tabs -->
  <div style="background: white; border: 1px solid #ddd; border-radius: 8px 8px 0 0; padding: 0;">
    <div style="display: flex; border-bottom: 2px solid #eee;">
      <%= link_to "Publicacions", user_path(@user, tab: 'posts'),
          style: "padding: 15px 30px; text-decoration: none; color: #{@active_tab == 'posts' ? '#0079d3' : '#666'}; border-bottom: 3px solid #{@active_tab == 'posts' ? '#0079d3' : 'transparent'}; font-weight: #{@active_tab == 'posts' ? 'bold' : 'normal'};" %>
      <%= link_to "Comentaris", user_path(@user, tab: 'comments'),
          style: "padding: 15px 30px; text-decoration: none; color: #{@active_tab == 'comments' ? '#0079d3' : '#666'}; border-bottom: 3px solid #{@active_tab == 'comments' ? '#0079d3' : 'transparent'}; font-weight: #{@active_tab == 'comments' ? 'bold' : 'normal'};" %>
    </div>
  </div>

  <!-- Contingut segons el tab actiu -->
  <div style="background: white; border: 1px solid #ddd; border-top: none; border-radius: 0 0 8px 8px; padding: 20px;">
    <% if @active_tab == 'posts' %>
      <!-- Publicacions -->
      <% if @posts.any? %>
        <% @posts.each do |post| %>
          <div style="border-bottom: 1px solid #eee; padding: 15px 0;">
            <div style="font-size: 12px; color: #666; margin-bottom: 5px;">
              <%= link_to "c/#{post.community.slug}", community_path(post.community), style: "color: #0079d3; text-decoration: none; font-weight: bold;" %>
              ¬∑ <%= time_ago_in_words(post.created_at) %> enrere
            </div>
            <h3 style="margin: 5px 0;">
              <%= link_to post.title, post_path(post), style: "color: #1c1c1c; text-decoration: none;" %>
            </h3>
            <% if post.body.present? %>
              <p style="color: #666; margin: 10px 0;"><%= truncate(post.body, length: 200) %></p>
            <% end %>
            <div style="font-size: 12px; color: #666;">
              <%= post.comments.count %> comentaris
            </div>
          </div>
        <% end %>
      <% else %>
        <p style="text-align: center; color: #666; padding: 40px 0;">
          Aquest usuari encara no ha publicat res.
        </p>
      <% end %>

    <% elsif @active_tab == 'comments' %>
      <!-- Comentaris -->
      <% if @comments.any? %>
        <% @comments.each do |comment| %>
          <div style="border-bottom: 1px solid #eee; padding: 15px 0;">
            <div style="font-size: 12px; color: #666; margin-bottom: 5px;">
              Comentari a
              <%= link_to comment.post.title, post_path(comment.post), style: "color: #0079d3; text-decoration: none;" %>
              ¬∑ <%= time_ago_in_words(comment.created_at) %> enrere
            </div>
            <div style="background: #f8f9fa; padding: 10px; border-radius: 4px; border-left: 3px solid #0079d3;">
              <%= simple_format(comment.body) %>
            </div>
          </div>
        <% end %>
      <% else %>
        <p style="text-align: center; color: #666; padding: 40px 0;">
          Aquest usuari encara no ha comentat res.
        </p>
      <% end %>
    <% end %>
  </div>
</div>
