<div style="max-width: 900px; margin: 0 auto;">
  <!-- Banner -->
  <div style="height: 200px; background: linear-gradient(135deg, #0079d3, #0060a5); border-radius: 8px; margin-bottom: -60px; position: relative;">
    <% if @user.banner_url.present? %>
      <img src="<%= @user.banner_url %>" style="width: 100%; height: 100%; object-fit: cover; border-radius: 8px;" alt="Banner">
    <% end %>
  </div>

  <!-- Informació del perfil -->
  <div style="background: white; border: 1px solid #ddd; border-radius: 8px; padding: 20px; margin-bottom: 20px;">
    <div style="display: flex; align-items: flex-start; gap: 20px;">
      <!-- Avatar -->
      <div style="position: relative; top: -40px;">
        <% if @user.avatar_url.present? %>
          <img src="<%= @user.avatar_url %>"
               style="width: 120px; height: 120px; border-radius: 50%; border: 5px solid white; box-shadow: 0 2px 8px rgba(0,0,0,0.1);"
               alt="Avatar">
        <% else %>
          <div style="width: 120px; height: 120px; border-radius: 50%; background: #ddd; border: 5px solid white; display: flex; align-items: center; justify-content: center; font-size: 48px; color: #666;">
            <%= @user.username[0].upcase %>
          </div>
        <% end %>
      </div>

      <!-- Dades -->
      <div style="flex: 1;">
        <div style="display: flex; justify-content: space-between; align-items: start;">
          <div>
            <h1 style="margin: 0 0 5px 0; font-size: 24px;"><%= @user.name %></h1>
            <p style="margin: 0; color: #666;">u/<%= @user.username %></p>
          </div>

          <% if user_signed_in? && current_user == @user %>
            <%= link_to "Editar perfil", edit_user_path(@user),
                style: "padding: 8px 16px; background: #0079d3; color: white; text-decoration: none; border-radius: 20px; font-weight: bold;" %>
          <% end %>
        </div>

        <% if user_signed_in? && current_user == @user %>
          <div style="margin-top: 12px;">
            <div style="font-size: 12px; color: #666; margin-bottom: 6px;">API key</div>
            <input type="text" value="<%= current_user.api_key %>" readonly style="width: 100%; max-width: 520px; padding: 8px 10px; border: 1px solid #ddd; border-radius: 6px; font-family: monospace;" onclick="this.select();">
          </div>
        <% end %>

        <% if @user.bio.present? %>
          <p style="margin-top: 15px; color: #1c1c1c;"><%= @user.bio %></p>
        <% end %>

        <!-- Estadístiques -->
        <div style="display: flex; gap: 20px; margin-top: 15px; padding-top: 15px; border-top: 1px solid #eee;">
          <div>
            <strong><%= @user.posts_count %></strong>
            <span style="color: #666;">publicacions</span>
          </div>
          <div>
            <strong><%= @user.comments_count %></strong>
            <span style="color: #666;">comentaris</span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Tabs -->
  <div style="background: white; border: 1px solid #ddd; border-radius: 8px; overflow: hidden;">
    <div style="display: flex; border-bottom: 1px solid #eee; background: #f8f9fa;">
      <%= link_to "Publicacions", user_path(@user, tab: 'posts'),
          style: "flex: 1; text-align: center; padding: 15px; text-decoration: none; color: #{@active_tab == 'posts' ? '#0079d3' : '#666'}; font-weight: #{@active_tab == 'posts' ? 'bold' : 'normal'}; border-bottom: #{@active_tab == 'posts' ? '3px solid #0079d3' : '3px solid transparent'};" %>

      <%= link_to "Comentaris", user_path(@user, tab: 'comments'),
          style: "flex: 1; text-align: center; padding: 15px; text-decoration: none; color: #{@active_tab == 'comments' ? '#0079d3' : '#666'}; font-weight: #{@active_tab == 'comments' ? 'bold' : 'normal'}; border-bottom: #{@active_tab == 'comments' ? '3px solid #0079d3' : '3px solid transparent'};" %>
    </div>

    <div style="padding: 20px;">
      <% if @active_tab == 'posts' %>
        <!-- Posts -->
        <% if @posts.any? %>
          <% @posts.each do |post| %>
            <div style="border-bottom: 1px solid #eee; padding: 15px 0;">
              <h3 style="margin: 0 0 5px 0;">
                <%= link_to post.title, post_path(post), style: "color: #1c1c1c; text-decoration: none;" %>
              </h3>
              <div style="color: #666; font-size: 14px;">
                <%= time_ago_in_words(post.created_at) %> ago
                · <%= link_to "c/#{post.community.slug}", community_path(post.community), style: "color: #0079d3; text-decoration: none;" %>
                · <%= post.comments.count %> comentaris
              </div>
            </div>
          <% end %>
        <% else %>
          <p style="text-align: center; color: #666; padding: 40px 0;">
            Aquest usuari encara no ha publicat res.
          </p>
        <% end %>

      <% elsif @active_tab == 'comments' %>
        <!-- Comentaris -->
        <% if @comments.any? %>
          <% @comments.each do |comment| %>
            <div style="border-bottom: 1px solid #eee; padding: 15px 0;">
              <div style="font-size: 14px; color: #666; margin-bottom: 8px;">
                Comentari en:
                <%= link_to comment.post.title, post_path(comment.post), style: "color: #0079d3; text-decoration: none;" %>
                · <%= time_ago_in_words(comment.created_at) %> ago
              </div>
              <div style="background: #f8f9fa; padding: 10px; border-radius: 4px; border-left: 3px solid #0079d3;">
                <%= simple_format(comment.body) %>
              </div>
            </div>
          <% end %>
        <% else %>
          <p style="text-align: center; color: #666; padding: 40px 0;">
            Aquest usuari encara no ha comentat res.
          </p>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
