<% content_for :title, "Users" %>

<div class="PageHeader">
  <div>
    <h1 class="PageTitle">Users</h1>
    <p class="PageSubtitle">People, profiles and activity</p>
  </div>
  <div class="Pills">
    <%= link_to "Back to posts", posts_path, class: "btn btn-ghost" %>
  </div>
</div>

<div style="display:grid;grid-template-columns:repeat(auto-fill,minmax(260px,1fr));gap:12px;">
  <% @users.each do |user| %>
    <div class="Card CardPad">
      <%= render user %>
      <div class="Pills" style="margin-top:12px;justify-content:flex-end;">
        <%= link_to "View profile", user_path(user), class: "btn btn-ghost" %>
      </div>
    </div>
  <% end %>
</div>

<% if @users.empty? %>
  <div class="Card CardPad Empty">No users found.</div>
<% end %>
