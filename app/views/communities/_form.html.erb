<%= form_with(model: community, local: true, html: { multipart: true }) do |form| %>
  <% if community.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(community.errors.count, "error") %> impidieron guardar la comunidad:</h2>
      <ul>
        <% community.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :slug, "id (obligatorio)" %><br>
    <%= form.text_field :slug, required: true, placeholder: "p.ej. programming" %>
    <p style="font-size:0.9rem;color:#666;">Sólo minúsculas, números y guiones.</p>
  </div>

  <div>
    <%= form.label :name, "Nombre (opcional)" %><br>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :avatar, "Avatar (opcional)" %><br>
    <%= form.file_field :avatar, accept: "image/" %>
  </div>

  <div>
    <%= form.label :banner, "Banner (opcional)" %><br>
    <%= form.file_field :banner, accept: "image/" %>
  </div>

  <div style="margin-top:1rem;">
    <%= form.submit %>
  </div>
<% end %>