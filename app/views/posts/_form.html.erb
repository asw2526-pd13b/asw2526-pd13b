<%= form_with(model: post, local: true, html: { multipart: true }) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(post.errors.count, "error") %> impidieron guardar el post:</h2>
      <ul>
        <% post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3 row">
    <%= form.label :title, "Títol", class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%# L'original feia servir un <textarea>, però un <input> és més correcte per un títol %>
      <%= form.text_field :title, required: true, placeholder: "Un títol curt i descriptiu", class: "form-control" %>
    </div>
  </div>

  <div class="mb-3 row">
    <%= form.label :url, "URL Externa", class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_field :url, required: true, placeholder: "https://...", class: "form-control" %>
    </div>
  </div>

  <div class="mb-3 row">
    <%= form.label :body, "Body (opcional)", class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.text_area :body, rows: 6, class: "form-control", placeholder: "Opcional" %>
    </div>
  </div>

  <div class="mb-3 row">
    <%= form.label :community_id, "Comunitat", class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%# Apliquem la classe 'form-select' al teu collection_select %>
      <%= form.collection_select :community_id, @communities, :id, :slug,
            { prompt: "Selecciona una comunitat" },
            { class: "form-select" } %>
    </div>
  </div>

  <div class="mb-3 row">
    <%= form.label :image, "Imatge (opcional)", class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= form.file_field :image, accept: "image/*", class: "form-control" %>
    </div>
  </div>

  <div class="mb-3 row">
    <div class="col-sm-10 offset-sm-2">
      <%# Aquest botó ara canviarà de text si estàs creant o editant %>
      <%= form.submit (post.persisted? ? "Desar Canvis" : "Crear Publicació"), class: "btn btn-primary" %>
    </div>
  </div>
<% end %>